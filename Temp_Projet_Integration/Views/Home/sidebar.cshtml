
@{
    ViewData["Title"] = "sidebar";
    string jsonData = System.IO.File.ReadAllText("wwwroot/template/jsonfile/data.json");
    dynamic data = Newtonsoft.Json.JsonConvert.DeserializeObject(jsonData);
}


@foreach (var item in data)
{
    <li class="nav-item menu-items">
        @if (item.submenu != null && item.submenu.Count > 0)
        {
            <a class="nav-link" data-toggle="collapse" href="#@(item.id)" aria-expanded="false" aria-controls="@(item.id)">
                <span class="menu-icon">
                    <i class="mdi mdi-@(item.logo)"></i>
                </span>
                <span class="menu-title">@item.name</span>
                <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="@(item.id)">
                <ul class="nav flex-column sub-menu">
                    @foreach (var subItem in item.submenu)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@subItem.href">@subItem.name</a>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <a class="nav-link" href="@item.href">
                <span class="menu-icon">
                    <i class="mdi mdi-@(item.logo)"></i>
                </span>
                <span class="menu-title">@item.name</span>
            </a>
        }
    </li>
}